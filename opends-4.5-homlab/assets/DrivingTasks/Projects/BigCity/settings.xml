<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://opends.eu/drivingtask/settings"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="http://opends.eu/drivingtask/settings ../../Schema/settings.xsd">

	<general>
		<driverName>default driver</driverName>
		<showStats>false</showStats>
<!-- 		<numberOfScreens>2</numberOfScreens>
		<angleBetweenAdjacentCameras>90</angleBetweenAdjacentCameras>
-->		

		<showAnalogIndicators> false </showAnalogIndicators> 

	</general>
	
	<objectLocator>
		<enable>false</enable>
		<fileName>trafficObjects.txt</fileName>	
	</objectLocator>
	
	<HMI>
		<enableConnection>false</enableConnection>
		<ip>127.0.0.1</ip>
		<port>2111</port>
	</HMI>
	
	<externalVisualization>
		<enableConnection>false</enableConnection>
		<ip>141.96.189.103</ip>
		<port>4711</port>
		<updateRate>20</updateRate>
		<scalingFactor>100</scalingFactor>
		<sendPosOriAsOneString>false</sendPosOriAsOneString>
	</externalVisualization>
	
	<CANInterface>
		<enableConnection>false</enableConnection>
		<ip>192.168.0.2</ip>
		<port>4711</port>
		<updateRate>20</updateRate>
		<maxSteeringAngle>180</maxSteeringAngle>
	</CANInterface>
	
	<vsimrtiServer>
		<startServer>false</startServer>
		<port>1122</port>
	</vsimrtiServer>

	<reactionMeasurement>
		<groupRed>incongruent</groupRed>
		<groupGreen>congruent</groupGreen>
		<groupYellow>control_neutral</groupYellow>
		<groupCyan>control_silence</groupCyan>
		<groupBlue>no_target</groupBlue>
		<groupMagenta></groupMagenta>
	</reactionMeasurement>
	
	<controllers>
		<joystick>
			<!-- Logitech G27 -->
			<dumpJoystickList>true</dumpJoystickList>
			<steering controllerID="2" axisID="6" invert="false" sensitivity="0.5"/>
			<combinedPedals controllerID="2" axisID="3" invert="false" sensitivity="1.0"/>
			<accelerator controllerID="2" axisID="5" invert="true" sensitivity="1.0"/>
			<brake controllerID="2" axisID="4" invert="true" sensitivity="1.0"/>
			<clutch controllerID="2" axisID="9" invert="true" sensitivity="1.0"/>
			<keyAssignments>
				<keyAssignment function="start_engine" key="BUTTON_1" />
				<keyAssignment function="stop_engine" key="BUTTON_2" />
				<keyAssignment function="gear1" key="BUTTON_12" />
				<keyAssignment function="gear2" key="BUTTON_13" />
				<keyAssignment function="gear3" key="BUTTON_14" />
				<keyAssignment function="gear4" key="BUTTON_15" />
			    <keyAssignment function="gear5" key="BUTTON_16" />
				<keyAssignment function="gear6" key="BUTTON_17" />
				<keyAssignment function="gearR" key="BUTTON_11" />
			</keyAssignments>
		</joystick>
		<keyboard>
			<keyAssignments>
				<keyAssignment function="toggle_cam" key="KEY_V" />
				<keyAssignment function="horn" key="KEY_H" />
			</keyAssignments>
		</keyboard>
		<mouse>
			<!-- only for outside view -->
			<minScrollZoom>1</minScrollZoom>
			<maxScrollZoom>40</maxScrollZoom>
			<scrollSensitivityFactor>5</scrollSensitivityFactor>
		</mouse>
	</controllers>
	

</settings>
